dnl Process this with autoconf to create configure
AC_INIT(kawa/repl.java)

AM_INIT_AUTOMAKE(kawa, 1.2)

AM_MAINTAINER_MODE

#PACKAGE=kawa
#VERSION=2.0alpha
AC_CONFIG_AUX_DIR(.)
AC_ARG_PROGRAM
#AM_PROG_INSTALL
#AC_PROG_MAKE_SET

dnl We must have the absolute path to the build directory.
TOP_BUILDDIR=`pwd`
AC_SUBST(TOP_BUILDDIR)

dnl AC_ARG_WITH(classpath,[  --with-classpath          Path to Java classes], classpath=$withval, classpath=$$CLASSPATH)

AC_SUBST(PACKAGE)
AC_SUBST(VERSION)
AC_OUTPUT(Makefile codegen/Makefile kawa/Makefile kawa/lang/Makefile kawa/math/Makefile kawa/standard/Makefile kawa/lib/Makefile doc/Makefile testsuite/Makefile)
