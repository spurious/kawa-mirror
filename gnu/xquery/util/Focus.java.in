package gnu.xquery.util;
import gnu.lists.*;
import gnu.bytecode.*;
import gnu.expr.*;
import gnu.math.IntNum;

public final class Focus extends SeqPosition
{
  
@if WITH REFERENCES@
static ThreadLocal current = new ThreadLocal();
@endif WITH REFERENCES@
@if WITHOUT REFERENCES@
static Focus current = new Focus();
@endif WITHOUT REFERENCES@

  public static Focus getCurrent()
  {
@if WITH REFERENCES@
    Object obj = current.get();
    if (obj == null)
      {
	obj = new Focus();
	current.set(obj);
      }
    return (Focus) obj;
@endif WITH REFERENCES@
@if WITHOUT REFERENCES@
    return current;
@endif WITHOUT REFERENCES@
  }

  long position;
  IntNum contextPosition;
  int size;
  IntNum contextSize;

  public static void compileGetCurrent(Compilation comp)
  {
    // FIXME This should be optimized so it only done once per method.
    CodeAttr code = comp.getCode();
    code.emitInvoke(getCurrentFocusMethod);
  }

  public static final ClassType TYPE = ClassType.make("gnu.xquery.util.Focus");
  static final Method getCurrentFocusMethod
    = TYPE.getDeclaredMethod("getCurrent", 0);
}
